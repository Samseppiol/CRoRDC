<h1>Edit existing article</h1>

<% if @article.errors.any? %>
<h2>The following errors prevented article being created:</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li> <%= msg %> </li>
  <% end %>
</ul>
<% end %>
<%= form_for @article do |f| %>
<p>
  <!-- Pass in the variable and give it the value. -->
  <%= f.label :title %> <br>
  <%= f.text_field :title %>
</p>

<p>
  <!-- Pass in the variable and give it the value. -->
  <%= f.label :description%> <br>
  <%= f.text_area :description%>
</p>

<%= f.submit %>

<% end %>
