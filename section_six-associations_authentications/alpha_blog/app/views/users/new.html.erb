<h1 align='center'>Signup For Alpha Blog</h1>



<%= render 'shared/errors', obj: @user %>


<div class ='row'>
  <div class='col-xs-12'>
    <%= form_for(@user, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
    <div class='form-group'>
      <div class='control-label col-sm-2'>

      <!-- Pass in the variable and give it the value. -->
      <%= f.label :username %>
    </div>
    <div class='col-sm-8'>
      <%= f.text_field :username, class: 'form-control', placeholder: 'Enter Username', autofocus: true %>
    </div>
  </div>

  <div class='form-group'>
    <div class='control-label col-sm-2'>
      <%= f.label :email%>
    </div>
    <div class='col-sm-8'>
      <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Email'%>
    </div>
  </div>

  <div class='form-group'>
    <div class='control-label col-sm-2'>
      <%= f.label :password%>
    </div>
    <div class='col-sm-8'>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Enter Password'%>
    </div>
  </div>

  <div class='form-group'>
    <div class='col-sm-offset-2 col-sm-10'>
    <%= f.submit "Sign-Up", class: 'btn btn-primary btn-lg' %>
  </div>
</div>
<% end %>
  <div class='col-xs-4 col-xs-offset-4'>
  [ <%= link_to "Cancel Request & Return to Article Listings", articles_path %> ]
</div>

</div>
</div>
